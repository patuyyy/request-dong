<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfigma3"
    tools:context=".AboutMeActivity">

    <TextView
        android:id="@+id/myacctxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:typeface="monospace"
        android:textColor="#3155ED"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/bgputih"
        android:layout_below="@id/myacctxt"
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedrectangle"
        android:outlineAmbientShadowColor="@color/black">
        <TextView
            android:id="@+id/initial"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:textSize="60dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/oval"
            android:backgroundTint="#D9D9D9"
            tools:text="-"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8ECDDD"
            android:textSize="23dp"
            android:gravity="center"
            android:layout_below="@id/initial"
            android:typeface="monospace"
            android:layout_marginTop="18dp"
            tools:text="-"
            />
        <TextView
            android:id="@+id/usernametxt"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Username :"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/name"
            />
        <TextView
            android:id="@+id/emaildata"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:gravity="left"
            android:textSize="20dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"
            tools:text="-"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bgputih3"
        android:layout_width="340dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/roundedrectangle"
        android:outlineAmbientShadowColor="@color/black"
        android:gravity="center"
        android:layout_below="@id/bgputih">

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="LOGOUT"
            android:background="@drawable/roundedrectangle"
            tools:backgroundTint="#D9D9D9"
            android:textColor="@color/white"
            />

    </RelativeLayout>



</RelativeLayout>