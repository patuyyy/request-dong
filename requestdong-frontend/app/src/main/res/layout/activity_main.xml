<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfigma4"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
    </LinearLayout>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchbar"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        android:layout_centerInParent="true"
        app:queryHint="Event name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"
        >

    </androidx.appcompat.widget.SearchView>

    <RelativeLayout
        android:id="@+id/listbg"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_below="@id/searchbar"
        android:background="@drawable/roundedrectangle"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        >
        <LinearLayout
            android:id="@+id/listtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Event"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="10sp"
                />
        </LinearLayout>

        <ListView
            android:id="@+id/listbus"
            android:layout_below="@id/listtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#D9D9D9"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/pagination_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/listbg">
        <Button
            android:id="@+id/prev_page"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#3155ED"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:minHeight="0dp" />
        <HorizontalScrollView
            android:id="@+id/page_number_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:paddingHorizontal="18dp">
            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </HorizontalScrollView>
        <Button
            android:id="@+id/next_page"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#3155ED"
            android:drawableLeft="@drawable/baseline_arrow_forward_ios_24"
            android:minHeight="0dp"/>
    </LinearLayout>

</RelativeLayout>