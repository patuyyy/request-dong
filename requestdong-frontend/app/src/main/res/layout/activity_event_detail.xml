<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfigma3"
    tools:context=".EventDetailActivity">

    <TextView
        android:id="@+id/eventtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Detail"
        android:typeface="monospace"
        android:textColor="#22668D"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/bgputih"
        android:layout_below="@id/eventtxt"
        android:layout_width="380dp"
        android:layout_height="576dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedrectangle"
        android:outlineAmbientShadowColor="@color/black">

        <TextView
            android:id="@+id/eventname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Event Name"
            android:textSize="18sp"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#F2F3F5"
            android:drawableLeft="@drawable/assignment_white"
            android:drawableTint="#3155ED"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <TextView
            android:id="@+id/eventdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Date"
            android:textSize="18sp"
            android:layout_marginHorizontal="25sp"
            android:layout_below="@id/eventname"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#F2F3F5"
            android:drawableLeft="@drawable/calendar_white"
            android:drawableTint="#3155ED"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Description"
            android:textSize="18sp"
            android:layout_marginHorizontal="25sp"
            android:layout_below="@id/eventdate"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#F2F3F5"
            android:drawableLeft="@drawable/description_white"
            android:drawableTint="#3155ED"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <LinearLayout
            android:id="@+id/registered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginBottom="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Registered as"
                android:textSize="18dp"
                android:textColor="#22668D"/>

            <TextView
                android:id="@+id/stafftxt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:text="staff"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:paddingLeft="5sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request List"
            android:layout_below="@id/registered"
            android:layout_marginHorizontal="20dp"
            android:textSize="20sp"
            />
        <ListView
            android:id="@+id/listbus"
            android:layout_below="@id/request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#D9D9D9"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bgputih"
        android:gravity="center">

        <Button
            android:id="@+id/acarabtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Daftar staff acara"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/roundedrectangle2"
            app:backgroundTint="#22668D"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/operasionalbtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Daftar staff ops"
            android:background="@drawable/roundedrectangle2"
            app:backgroundTint="#22668D"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>

</RelativeLayout>